<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_login"
    tools:context=".view.authen.fragment.ForgotDonePasswordFr">

    <com.cmd.flora.utils.widget.header.BackHeaderView
        android:id="@+id/img_back_reset_pass_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.cmd.flora.utils.widget.ScreenNameTitle
        android:id="@+id/baseTextview7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:text="@string/password_reissue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_back_reset_pass_2"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/bg_form_login"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/baseTextview7">

        <com.cmd.flora.base.BaseTextview
            android:id="@+id/baseTextview10"
            style="@style/text_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="37dp"
            android:text="@string/sent_email"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/baseTextview7" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_rounder_edt_login"
            android:enabled="false"
            android:fontFamily="@font/hiragino_kaku_gothic_pro_w6"
            android:gravity="center"
            android:hint="abcde@fghi.co.jp"
            android:textColor="@color/text_login_color"
            android:textSize="16dp"
            android:textStyle="bold"
            app:hintTextColor="@color/text_login_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/baseTextview10" />

        <com.cmd.flora.base.BaseTextview
            android:id="@+id/baseTextview11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="20dp"
            android:lineSpacingExtra="5dp"
            android:text="@string/noti_check_email"
            android:textColor="#FD0000"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_email" />

        <com.cmd.flora.base.BaseTextview
            android:id="@+id/btn_return_login"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="53dp"
            android:background="@drawable/bg_btn_login"
            android:gravity="center"
            android:text="@string/return_login"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/baseTextview11" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>