<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEF5F2">

    <com.cmd.flora.utils.widget.ScreenNameTitle
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:text="@string/title_setting" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="26dp"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/idContainer"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_marginHorizontal="12dp"
                android:background="@drawable/bg_radius_10_white"
                app:layout_constraintTop_toTopOf="parent">

                <com.cmd.flora.base.BaseTextview
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:text="@string/userId"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.cmd.flora.base.BaseTextview
                    android:id="@+id/tvUserId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:text="1234-56-7890123"
                    android:textColor="#4D4D4D"
                    android:textSize="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/notifyContainer"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_radius_10_white"
                app:layout_constraintTop_toBottomOf="@id/idContainer">

                <com.cmd.flora.base.BaseTextview
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:text="@string/notify_setting_title"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.cmd.flora.utils.widget.CustomSwitchView
                    android:id="@+id/switchNotify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:selectedColor="@color/tab_selected_color" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="38dp"
                android:background="@drawable/bg_radius_10_white"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/notifyContainer">

                <com.cmd.flora.base.BaseTextview
                    android:id="@+id/btnCompanyProfile"
                    style="@style/textSetting"
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:text="@string/company_profile"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/notifyContainer" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_divider" />

                <com.cmd.flora.base.BaseTextview
                    android:id="@+id/btnPrivacy"
                    style="@style/textSetting"
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:text="@string/privacy_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView91" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_divider" />

                <com.cmd.flora.base.BaseTextview
                    android:id="@+id/btnLicense"
                    style="@style/textSetting"
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:text="@string/license_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView92" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_divider" />

                <com.cmd.flora.base.BaseTextview
                    android:id="@+id/btnLogout"
                    style="@style/textSetting"
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:text="@string/logout_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView93" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_divider" />

                <com.cmd.flora.base.BaseTextview
                    android:id="@+id/btnWithdraw"
                    style="@style/textSetting"
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:text="@string/withdraw_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView94" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>